<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielburgnerjr.tsaleftorrightpremium.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/tsaLeftOrRight" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/textAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000"
        android:text="@string/about"
        android:textSize="30dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000"
        android:text="@string/start"
        android:textSize="30dp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#000"
        android:text="@string/share"
        android:textSize="30dp"
        android:textColor="#fff" />
</RelativeLayout>
