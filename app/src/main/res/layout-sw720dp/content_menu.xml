<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danielburgnerjr.tsaleftorrightpremium.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/tsa_lor_logo" />

    <TextView
        android:id="@+id/textAppName"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="45sp"
        android:text="@string/tsaLeftOrRight" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="450dp"
        android:layout_height="112dp"
        android:layout_below="@+id/textAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2f97ad"
        android:text="@string/about"
        android:textSize="75sp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="450dp"
        android:layout_height="112dp"
        android:layout_below="@+id/btnAbout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2f97ad"
        android:text="@string/start"
        android:textSize="75sp"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="450dp"
        android:layout_height="112dp"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#2f97ad"
        android:text="@string/share"
        android:textSize="75sp"
        android:textColor="#fff" />

</RelativeLayout>
